{{!-- Container for editing a post --}}
<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <br>
  <br>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div class="form-group">
      <label for="edit-title">Title:</label>
      <input name="post-title" type="text" value="{{post.title}}" class="form-control" id="edit-title"/>
    </div>
    <div class="form-group">
      <label for="edit-post-content">Post Content:</label>
      <textarea name="post-url" type="text" class="form-control" id="edit-post-content"></textarea>
    </div>
    <div>
      {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn btn-primary">Save post</button>
    <button type="button" class="delete-post-btn btn btn-danger">Delete post</button>
  </form>
</article>

{{!-- Container for adding comments ot a page --}}
<form class="comment-form">
  <div class="form-group">
    <label for="add-a-comment">Add Comment:</label>
    <textarea name="comment-body" id="add-a-comment"></textarea>
  </div>

  <div>
    <button type="submit" class="btn btn-primary">Add comment</button>
  </div>
</form>

{{> comments post.comments}}

{{!-- Load scripts that edit a post, delete a post, and create a comment on a post --}}
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>